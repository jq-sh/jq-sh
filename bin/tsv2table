#!/usr/bin/env jq-sh

opts --null-input --raw-input --raw-output

arg       title                "${title}"
arg_int   max_width            ${max_width:-${COLUMNS:-0}}
arg_jsonl truncations          $@

__JQ__


include "json2table";

[ inputs | split("\t") ]    |
truncate_rows($truncations) |
shrink_rows                 |
title, render_table
