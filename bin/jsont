#!/usr/bin/env bash--script
# --help
## jsont [kwargs...]
#
# JSON templating helper


args=()
for arg in "$@"; do
  if [[ $arg =~ ^[a-zA-Z0-9_]+=.*$ ]]; then
    export "${arg?}"
  else
    args+=("$arg")
  fi
done

opts="--null-input --compact-output" jq-sh "${args[@]}" |
  jq --compact-output 'del(..|select(. == {}))'
